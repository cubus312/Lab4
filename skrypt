#!/bin/bash

if [ "$1" == "--help" ]; then
	echo "Dostępne opcje to:"
	echo "--logs x      Domyślnie tworzy 100 plików, w których zapisuje nazwę pliku,skryptu i datę." 
	echo "Dodatkowo w miejsce x można wpisać dowolną wartość która zmieni ilość tworzonych plików."
	echo "--date 	    Wyświetla dzisiejszą datę."
	echo "--help        Wyświtetla wszystkie dodatkowe opcje ^^^^^^^^^^"
fi